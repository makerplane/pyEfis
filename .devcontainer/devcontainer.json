{
  "name": "pyEfis Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "sudo apt update && sudo apt install -y python3-pyqt6 && make full-init",
  "features": {
    "ghcr.io/devcontainers/features/pyenv:1": {
      "version": "3.11"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ]
    }
  },
  "remoteUser": "vscode"
}
